<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center text-white">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Add Product</h2>
              <p class="text-white mb-5">Please enter the Product</p>
              <form action="/admin/add-product" method="post" enctype="multipart/form-data">
                <div class="form-outline mb-4">
                  <input type="text" id="form2Example17" class="form-control form-control-lg" name="name" />
                  <label class="form-label" for="form2Example17">Name</label>
                </div>

                <div class="form-outline mb-4">
                  <select style=" color: #6c75a7;" name="category" class="select form-control" required>
                    <option value="none" selected disabled hidden> Select a category</option>
                    {{#each category}}
                    <option value="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                  </select>
                  <label for="category-select">Category</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="number" id="form2Example17" class="form-control form-control-lg" name="quantity" />
                  <label class="form-label" for="form2Example17">Quantity</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="number" id="form2Example27" class="form-control form-control-lg" name="price" />
                  <label class="form-label" for="form2Example27">Price</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="number" id="form2Example27" class="form-control form-control-lg" name="mrp" />
                  <label class="form-label" for="form2Example27">Mrp</label>
                </div>

                 <div class="form-outline mb-4">
                  <select style=" color: #6c75a7;" name="brand" class="select form-control" required>
                    <option value="none" selected disabled hidden> Select a brand</option>
                    {{#each brand}}
                    <option value="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                  </select>
                  <label for="brand-select">Brand</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="form2Example27" class="form-control form-control-lg" name="description" />
                  <label class="form-label" for="form2Example27">Description</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="file" id="form2Example27" accept="image/*" class="form-control form-control-lg"
                    name="main_image" />
                  <label class="form-label" for="form2Example27"> Main Image</label>
                </div>
                <div class="form-outline mb-4">
                  <input type="file" id="form2Example27" accept="image/*" class="form-control form-control-lg"
                    name="sub_image" multiple />
                  <label class="form-label" for="form2Example27"> sub Image</label>
                </div>
                {{#if err}}
                <div class="mb-3 text-center">
                  <b class="text-danger">{{message}}</b>
                </div>
                {{/if}}
                <div class="pt-1 mb-4">
                  <button class="btn btn-lg btn-block text-white" type="submit"
                    style="background-color:#fc0c7f">Add</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
