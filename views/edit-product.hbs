
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center text-white">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Edit Product</h2>
                            <p class="text-white mb-5">Please edit the details</p>
            <form action="/admin/edit-product" method="post" enctype="multipart/form-data">
            <input type="text" value="{{product._id}}" name="_id" style="height:0px; visibility:hidden;">

                 

                 

                  <div class="form-outline mb-4">
                    <input type="text" id="form2Example17" value="{{product.name}}" class="form-control form-control-lg" name="name" />
                    <label class="form-label" for="form2Example17">Name</label>
                  </div>

                  <div class="form-outline mb-4">
                    <select style=" color: #6c75a7;" name="category" value="{{produc.category}}" class="select form-control" required>
                      <option  value="none"  selected  disabled hidden > Select a category</option>
                      {{#each category}}
                    <option value="{{this.name}}">{{this.name}}</option>
                      {{/each}}
                  </select>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="number" id="form2Example17" value="{{product.quantity}}" class="form-control form-control-lg" name="quantity"/>
                    <label class="form-label" for="form2Example17">Quantity</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="number" id="form2Example27" value="{{product.price}}" class="form-control form-control-lg" name="price"/>
                    <label class="form-label" for="form2Example27">Price</label>
                  </div>

                     <div class="form-outline mb-4">
                    <input type="number" id="form2Example27" value="{{product.mrp}}" class="form-control form-control-lg" name="mrp"/>
                    <label class="form-label" for="form2Example27">Mrp</label>
                  </div>

                     <div class="form-outline mb-4">
                    <input type="text" id="form2Example27" value="{{product.brand}}" class="form-control form-control-lg" name="brand"/>
                    <label class="form-label" for="form2Example27">Brand</label>
                  </div>
                  
                     <div class="form-outline mb-4">
                    <input type="text" id="form2Example27" value="{{product.description}}" class="form-control form-control-lg" name="description"/>
                    <label class="form-label" for="form2Example27">Description</label>
                  </div>
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example27"> Main Image</label>
                    <div>
                                <img src="/product-images/{{product.main_image.filename}}" style="height:60px; width:60px; object-fit:contain" alt="">
                                {{!-- {{product.main_image[0]}} --}}
                    </div>
                    
                  </div>
                     <div class="form-outline mb-4">
                    <input type="file" id="form2Example27" accept="image/*" class="form-control form-control-lg" name="main_image"/>
                    <label class="form-label" for="form2Example27"> Main Image</label>
                  </div>
                   <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example27"> sub Images</label>
                    <div>
                        {{#each product.sub_image}}
                                <img src="/product-images/{{this.filename}}" style="height:60px; width:60px; object-fit:contain" alt="">
                        {{/each}}
                    </div>
                    
                  </div>
                   <div class="form-outline mb-4">
                    <input type="file" id="form2Example27" accept="image/*" class="form-control form-control-lg" name="sub_image" multiple/>
                    <label class="form-label" for="form2Example27"> sub Image</label>
                  </div>
        
                  <div class="pt-1 mb-4">
                    <button class="btn btn-lg btn-block text-white" type="submit" style="background-color:#fc0c7f">Update</button>
                  </div>
                </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
